<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Audio Speed"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="18sp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:padding="3dp"
                android:background="@drawable/seek_gradient">

                <SeekBar
                    android:id="@+id/audioSpeedSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:progress="100"
                    android:progressDrawable="@drawable/transparent_gradient"
                    android:thumb="@drawable/green_circle_icon"
                    android:thumbTint="@color/white" />

            </LinearLayout>
            <TextView
                android:id="@+id/audioSpeedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Medium"
                android:fontFamily="sans-serif-condensed-medium"/>


        </LinearLayout>

    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Audio Base"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="18sp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:padding="3dp"
                android:background="@drawable/seek_gradient">

                <SeekBar
                    android:id="@+id/bassSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:progress="100"
                    android:progressDrawable="@drawable/transparent_gradient"
                    android:thumb="@drawable/green_circle_icon"
                    android:thumbTint="@color/white" />

            </LinearLayout>
            <TextView
                android:id="@+id/bassText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Medium"
                android:fontFamily="sans-serif-condensed-medium"/>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:padding="3dp"
                android:background="@drawable/seek_gradient">

                <SeekBar
                    android:id="@+id/bassWidthSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:progress="100"
                    android:progressDrawable="@drawable/transparent_gradient"
                    android:thumb="@drawable/green_circle_icon"
                    android:thumbTint="@color/white" />

            </LinearLayout>
            <TextView
                android:id="@+id/baseWidthText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Medium"
                android:fontFamily="sans-serif-condensed-medium"/>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:padding="3dp"
                android:background="@drawable/seek_gradient">

                <SeekBar
                    android:id="@+id/frequencySeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:progress="100"
                    android:progressDrawable="@drawable/transparent_gradient"
                    android:thumb="@drawable/green_circle_icon"
                    android:thumbTint="@color/white" />

            </LinearLayout>
            <TextView
                android:id="@+id/frequenyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Medium"
                android:fontFamily="sans-serif-condensed-medium"/>


        </LinearLayout>

    </LinearLayout>





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply Shifter Effect"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="18sp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:padding="3dp"
                android:background="@drawable/seek_gradient">

                <SeekBar
                    android:id="@+id/shifterTimeSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:progress="100"
                    android:progressDrawable="@drawable/transparent_gradient"
                    android:thumb="@drawable/green_circle_icon"
                    android:thumbTint="@color/white" />

            </LinearLayout>
            <TextView
                android:id="@+id/shifterTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Medium"
                android:fontFamily="sans-serif-condensed-medium"/>


        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:padding="3dp"
                android:background="@drawable/seek_gradient">

                <SeekBar
                    android:id="@+id/shifterWidthSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:progress="100"
                    android:progressDrawable="@drawable/transparent_gradient"
                    android:thumb="@drawable/green_circle_icon"
                    android:thumbTint="@color/white" />

            </LinearLayout>
            <TextView
                android:id="@+id/shifterWidthText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Medium"
                android:fontFamily="sans-serif-condensed-medium"/>


        </LinearLayout>



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply Echo Effect"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="18sp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"/>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"/>


     <androidx.coordinatorlayout.widget.CoordinatorLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <Button
             android:id="@+id/saveOutPut"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginTop="20dp"
             android:text="Pick File"/>

         <Button
             android:id="@+id/play"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:layout_gravity="center"
             android:visibility="gone"
             android:text="Play File"/>
     </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/black"
        android:visibility="gone"
        android:layout_marginTop="20dp"/>


</LinearLayout>